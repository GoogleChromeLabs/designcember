---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day17;
---

<style>
  .seventeen {
    --_bg-gradient-color-1: #f0eeea;
    --_bg-gradient-color-2: #ffbebb;

    align-self: center;
    margin: var(--size-4);

    @media (--md) {
      --_day-column: 2;
      max-inline-size: 25rem;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: center flex-end;
    margin-block-start: -5px;
  }

  .bg {
    mask-image: url(/day17/mask.png);
    mask-size: cover;
    mask-repeat: no-repeat;
    background: linear-gradient(to bottom, var(--_bg-gradient-color-1), var(--_bg-gradient-color-2));
    z-index: -1;
  }
</style>

<style global>
  [data-theme="dark"] {
    & .seventeen {
      --_bg-gradient-color-1: hsl(3deg 5% 70%);
      --_bg-gradient-color-2: hsl(3deg 40% 37%);
    }
  }
</style>

<div 
  id="17th" 
  data-day-state={day_state} 
  class="day seventeen stacked" 
  title=""
>
  <span class="plaque">
    <Number num="17" link="#17th" />
  </span>
  <div class="frame stacked">
    <div class="bg"></div>
    <Pic filename="day17/combo" width="1548" height="1238" role="presentation" />
  </div>
</div>