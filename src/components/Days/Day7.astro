---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day7;
---

<style>
  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-end: -15px;
  }

  .frame {
    background-color: #f9ecb3;
    border: var(--size-2) solid #d9773e;
    overflow: hidden;
  }

  .mat {
    place-self: flex-end center;
    margin-block-end: -40%;
    inline-size: 130%;
  }

  .disco-ball {
    inline-size: 45%;
    margin-inline-start: -10%;
  }

  .food-bowl {
    inline-size: 30%;
    place-self: flex-end;
    margin-inline-end: -15%;
    margin-block-end: 5%;
  }
</style>

<style global>
  [data-theme="dark"] .seven {
    & .frame {
      background-color: hsl(49deg 35% 24%);
    }
  }
</style>

<div 
  id="7th" 
  data-day-state={day_state} 
  class="day seven stacked" 
  title="Disco the pup plays with his pie toy while a disco ball spins overhead."
>
  <span class="plaque">
    <Number num="7" link="#7th" />
  </span>
  <div class="frame stacked">
    <div class="mat">
      <Pic filename="day7/mat" role="presentation" />
    </div>
    <div class="food-bowl">
      <Pic filename="day7/food" role="presentation" />
    </div>
    <Pic filename="day7/disco-combo" width="940" height="1280" role="presentation" />
    <div class="disco-ball">
      <Pic filename="day7/disco_ball" role="presentation" />
    </div>
  </div>
</div>