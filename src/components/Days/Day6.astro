---
import Pic from '../Pic/Pic.astro';
---

<style>
  .six {
    --bg-color: #fff4d7;
    border-radius: var(--radius-round);
    margin: var(--size-4);
    align-self: center;

    &::before {
      content: "6";
      margin-inline-start: 5%;
      inset-block: 3% auto;
    }
  }

  .bg {
    background-color: var(--bg-color);
    border-radius: var(--radius-round);
    margin-inline: 2% 4%;
    margin-block: 2% 5%;
  }

  .pig {
    max-inline-size: 60%;
    padding-inline-start: 10%;
    margin-block-end: 20%;
    margin-inline-end: 10%;
    align-self: flex-end;
    justify-self: center;
  }

  .coin {
    max-inline-size: 10%;
    margin-block-start: 10%;
    margin-inline-start: 15%;
    justify-self: center;
  }
</style>

<style global>
  [data-theme="dark"] {
    & .six {
      --bg-color: hsl(44deg 70% 32%);
    }
  }
</style>

<a href="#6th" id="6th" class="day six" title="A circular window with a cute piggy bank and a coin falling in">
  <div class="frame stacked">
    <div class="bg"></div>
    <Pic filename="day6/frame" width="1031" height="924" role="presentation" />
    <div class="pig">
      <Pic filename="day6/piggy" role="presentation" />
    </div>
    <div class="coin">
      <Pic filename="day6/coin" role="presentation" />
    </div>
  </div>
</a>