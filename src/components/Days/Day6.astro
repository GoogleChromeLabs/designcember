---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day6;
---

<style>
  .six {
    --bg-color: #fff4d7;
    border-radius: var(--radius-round);
    align-self: center;
  }

  .frame {
    overflow: hidden;
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-end: -15px;
  }

  .bg {
    background-color: var(--bg-color);
    border-radius: var(--radius-round);
    margin-inline: 2% 4%;
    margin-block: 2% 5%;
  }

  .pig {
    max-inline-size: 60%;
    padding-inline-start: -10%;
    margin-block-end: 20%;
    margin-inline-end: 10%;
    place-self: flex-end center;
    z-index: var(--layer-2);
  }

  .coin {
    max-inline-size: 10%;
    margin-block-start: 6%;
    margin-inline-start: 15%;
    justify-self: center;
  }

  .six:hover .coin,
  .six:focus .coin {
    animation: coindrop 1.5s steps(4) infinite forwards;
  }

  @keyframes coindrop {
    50% {
      transform: translateY(50%);
    }
    100% {
      transform: translateY(50%);
    }
  }
</style>

<style global>
  [data-theme="dark"] {
    & .six {
      --bg-color: hsl(44deg 70% 32%);
    }
  }
</style>

<div 
  id="6th" 
  class="day six stacked" 
  title="A circular window where a coin drops into a lucky piggy bank."
  data-day-state={day_state} 
  data-detail-position="bottom" 
  data-detail-title="Announcing: the Open UI Fund"
  data-detail-description="Chrome is starting an open source fund for UI development projects. Learn all about it and how to apply!" 
  data-detail-url="#"
>
  <span class="plaque">
    <Number num="6" link="#6th" active={day_state} />
  </span>
  <div class="frame stacked">
    <div class="bg"></div>
    <Pic filename="day6/frame" width="1031" height="924" role="presentation" />
    <div class="pig">
      <Pic filename="day6/piggy" role="presentation" />
    </div>
    <div class="coin">
      <Pic filename="day6/coin" role="presentation" />
    </div>
  </div>
</div>