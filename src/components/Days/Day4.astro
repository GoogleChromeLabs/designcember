<style>
  .four {
    aspect-ratio: 4/3;
    width: min(300px, 90%);
    align-self: flex-end;
    margin: var(--size-3) var(--size-3) -25%;
    background-color: transparent;

    @media (--lg) {
      grid-column: 1;
      grid-row: 2;
      margin: var(--size-3) var(--size-3) -5% var(--size-3);
    }

    @media (--xl) {
      grid-column: 4;
      grid-row: 1;
      margin: var(--size-5) var(--size-6) -15% var(--size-5);
    }

    &::before {
      content: "4";
      inset-block: -2ch auto;
    }
  }

  .frame {
    block-size: 100%;
    clip-path: polygon(0 0, 100% 0, 100% 100%);
    background-color: var(--_day-bg);
  }
</style>

<div id="4th" class="day four" tabindex="0">
  <div class="frame"></div>
</div>