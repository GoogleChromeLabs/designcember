---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day13;
---

<style>
  .thirteen {
    --bg-color: #e0e7ca;
    margin: var(--size-10) var(--size-8) var(--size-5);
    aspect-ratio: auto;
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-end: -3%;
  }

  .frame {
    place-self: center;
    block-size: 110px;
    inline-size: 70%;
  }

  .combo {
    max-inline-size: 90%;
    place-self: center;
    margin-block-start: -30%;
  }

  .window {
    background: linear-gradient(to bottom, var(--bg-color), rgba( 255, 255, 255, 0));
    border-radius: 5px 5px 45px 45px;
    height: 70%;
    align-self: flex-end;
  }
</style>

<style global>
  [data-theme="dark"] {
    & .sixteen {
      --bg-color: hsl(44deg 70% 32%);
    }
  }
</style>

<div
  id="13th"
  class="day thirteen stacked"
  aria-label="A propogation set-up of baby plants: Monstera, ZZ plant, and Ric Rac cactus."
  data-day-state={day_state}
  data-detail-position="bottom"
  data-detail-title="Accessibility Tree DevTools"
  data-detail-description="Discover the new full-page accessibility tree in DevTools, and learn how it was created."
  data-detail-url="https://developer.chrome.com/blog/full-accessibility-tree/"
>
  <span class="plaque">
    <Number num="13" link="#13th" active={day_state} />
  </span>
  <div class="frame stacked">
    <div class="window"></div>
    <div class="combo">
      <Pic filename="day13/13-combo" width="754" height="707" role="presentation" />
    </div>
  </div>
</div>
