---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day20;
---

<style>
  .twenty {
    margin-inline: var(--size-5) -20px;
    align-self: center;

    @media (--md) {
      --_day-column: 2;
    }

    @media (--lg) {
      --_day-column: 1;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-start center;
    margin-block-end: -15px;
  }

  .bg {
    border-radius: 50% 50% 50% 50% / 0% 0% 100% 100%;
    background: #7dabc8;
    margin: 6% 2% 2% 3%;
  }
</style>

<style global>
  [data-theme="dark"] {
    & .twenty .bg {
      background: hsl(203 41% 14%);
    }
  }
</style>

<div 
  id="20th" 
  data-day-state={day_state} 
  class="day twenty stacked" 
  title=""
>
  <span class="plaque">
    <Number num="20" link="#20th" />
  </span>
  <div class="frame stacked">
    <div class="bg"></div>
    <Pic filename="day20/20" width="1558" height="795" role="presentation" />
  </div>
</div>