---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
---

<style>
  .three {
    margin: var(--size-4);
    background: var(--_day-bg);
    border: var(--size-2) solid #d9773e;
    height: 90%;
    block-size: 300px;

    @media (--sm) {
      grid-row-start: 3;
    }

    @media (--md) {
      height: 80%;
      grid-row: 1 / span 2;
      grid-column-start: 3;
      --_day-height: 2;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-start center;
    margin-block-start: -15px;
  }
</style>

<div id="3rd" class="day three stacked" title="">
  <span class="plaque">
    <Number num="3" link="#3rd" />
  </span>
</div>