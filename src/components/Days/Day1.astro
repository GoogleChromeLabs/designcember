---
import Imgix from '../Imgix/Imgix.astro';
---

<style>
  .one {
    --frame-bottom: 45px;
    --frame-side: 20px;

    margin: var(--size-4);

    &::before {
      content: "1";
      inset-block-start: -2px;
    }
  }

  .pane {
    display: grid;
    border-radius: 1e3px 1e3px 0 0;
    overflow: hidden;
  }

  .una_body {
    align-self: flex-end;
    margin-block-end: -15px;
    padding-inline-start: 10px;
    padding-block-end: var(--frame-bottom);
  }

  .una_lower {
    margin-block-end: -18px;
    margin-inline-end: -40px;
    padding-block-end: var(--frame-bottom);
    max-inline-size: 90%;
    align-self: flex-end;
    justify-self: flex-end;
  }

  .adam {
    align-items: flex-end;
    justify-items: flex-end;
    padding-inline-end: var(--frame-side);
    padding-block-end: var(--frame-bottom);
  }

  .adam_body {
    max-inline-size: 60%;
  }

  .adam_hand {
    align-self: center;
    justify-self: center;
    max-inline-size: 18%;
    margin-block-start: -60px;
    margin-inline-end: 40px;
  }

  .lights {
    max-inline-size: 30%;
    margin-inline-start: 40px;
  }

  .bg {
    padding-inline: 20px;
  }
</style>

