<style>
  .one {
    --frame-bottom: 15%;
    --frame-side: 6%;

    margin: var(--size-4);

    &::before {
      content: "1";
      inset-block-start: -2px;
    }
  }

  .pane {
    border-radius: 1e3px 1e3px 0 0;
    padding-inline: var(--frame-side);
    margin-block-end: -10%;
    overflow: hidden;
    isolation: isolate;
  }

  .frame {
    margin-inline: calc(var(--frame-side) * -1);
    z-index: 2;
  }

  .bg {
    border-radius: 1e3px 1e3px 0 0;
    background: linear-gradient(to bottom right, #fdfcf2, #f7fad4);
    margin-block-end: var(--frame-bottom);
  }

  .bg-shadow {
    max-inline-size: 80%;
  }

  .una {
    padding-block-end: var(--frame-bottom);
    margin-block-end: -15px;
  }

  .una_body {
    align-self: flex-end;
  }

  .una_hand {
    max-inline-size: 13%;
    align-self: flex-end;
    justify-self: center;
    margin-block-end: 38%; 
    margin-inline-end: 8%; 
    transform-origin: bottom center;
    transform: rotateZ(-20deg);
    animation: una-wave 1s steps(3, end) infinite;
    z-index: 2;
  }

  .una_lower {
    margin-inline-end: -5%;
    max-inline-size: 75%;
    align-self: flex-end;
    justify-self: flex-end;
    z-index: 1;
  }

  .adam {
    align-items: flex-end;
    justify-items: flex-end;
    padding-inline-end: calc(var(--frame-side) / 2);
    padding-block-end: var(--frame-bottom);
  }

  .adam_body {
    max-inline-size: 65%;
    z-index: 2;
  }

  .adam_hand {
    align-self: center;
    justify-self: center;
    max-inline-size: 15%;
    margin-block-start: -35%;
    margin-inline-end: 39%;
    transform-origin: bottom right;
    transform: rotateZ(20deg);
    animation: adam-wave .75s steps(3, end) infinite;
  }

  .adam_wrist {
    align-self: center;
    justify-self: center;
    max-inline-size: 8%;
    margin-block-start: -22%;
    margin-inline-end: 22%;
  }

  .lights {
    max-inline-size: 30%;
    margin-inline-start: 10%;
  }

  @keyframes una-wave {
    50% { transform: rotateZ(5deg); }
  }

  @keyframes adam-wave {
    50% { transform: rotateZ(35deg); }
  }
</style>

