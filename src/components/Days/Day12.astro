---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day12;
---

<style>
  .twelve {
    margin: var(--size-4) var(--size-7);
    border-radius: 1e3px 1e3px 0 0;
    padding: 0;
    overflow: visible;
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
  }

  .bg {
    margin: 3% 3% 2% 4%;
    border-radius: 50% 50% 0 0;
    background-image: linear-gradient(150deg, #f4c8a6 40%, #ffddc0 0%);
  }

  .lights {
    align-self: flex-end;

    aspect-ratio: 3/0.7;
    margin-block-end: -9%;
    background: url("/day12/light_sprite.png") 100% 0%;
    background: url("/day12/light_sprite.webp") 100% 0%;
    background-size: 400% auto;

    @nest .day:is(:hover, :focus-within) & {
      animation: twinkle 1s steps(1) infinite;
    }
  }

  @keyframes twinkle {
    0%  { background-position-x: 100%; }
    25% { background-position-x: 200%; }
    50% { background-position-x: 400%; }
    75% { background-position-x: 300%; }
  }
</style>

<div 
  id="12th" 
  class="day twelve stacked" 
  title="A carousel horse is on display with holiday lights twinkling."
  data-day-state={day_state} 
  data-detail-position="bottom" 
  data-detail-title="Core Web Vitals Patterns" 
  data-detail-description="A collection of common UX patterns optimized for Core Web Vitals. This collection includes patterns such as carousels, fonts, images loading, infinite scroll, banners, placeholders, and more." 
  data-detail-url="https://web.dev/patterns/web-vitals-patterns/"
>
  <span class="plaque">
    <Number num="12" link="#12th" active={day_state} />
  </span>
  <div class="bg"></div>
  <Pic filename="day12/12-combo" width="821" height="800" role="presentation" />
  <div class="lights"></div>
</div>