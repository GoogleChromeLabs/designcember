---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day19;
---

<style>
  .nineteen {
    inline-size: 40%;
    justify-self: flex-end;
    margin: var(--size-3) var(--size-5) -10%;

    @media (--md) {
      inline-size: 50%;
      margin: var(--size-3) -10% -20%;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-end: -15px;
  }

  .bg {
    border-radius: var(--radius-round);
    background: #ffddbb;
  }

  .snow {
    inline-size: 35%;
  }
</style>

<style global>
  [data-theme="dark"] {
    & .nineteen .bg {
      background: hsl(244deg 21% 42%);
    }
  }
</style>

<div
  id="19th"
  class="day nineteen stacked"
  aria-label="A paint palette and two paint brushes sit on a desk, waiting for the painter!"
  data-day-state={day_state}
  data-detail-position="bottom"
  data-detail-title="HTTP 203: Random Paint Worklets"
  data-detail-description="In this episode Jake and Surma chat about creating 'random' paint effects, and why they shouldn't be truly random."
  data-detail-url="https://www.youtube.com/watch?v=ALKqavp9Fg0"
>
  <span class="plaque">
    <Number num="19" link="#19th" active={day_state} />
  </span>
  <div class="frame stacked">
    <div class="bg"></div>
    <Pic filename="day19/19" width="753" height="763" role="presentation" />
    <div class="snow">
      <Pic filename="day19/snow" role="presentation" />
    </div>
  </div>
</div>
