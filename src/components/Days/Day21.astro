---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day21;
---

<style>
  .twentyone {
    align-self: center;
    margin: var(--size-3);
    margin-inline: var(--size-12) 0;

    @media (--md) {
      --_day-height: 2;
    }

    @media (--lg) {
      --_day-column: 2;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-end: -15px;
  }

  .frame {
    height: 75%;
    min-block-size: 250px;
    border: var(--size-2) solid #d9773e;
    background: var(--_day-bg);

    @media (--lg) {
      height: 50%;
    }
  }
</style>

<div 
  id="21st" 
  data-day-state={day_state} 
  class="day twentyone stacked" 
  title=""
>
  <span class="plaque">
    <Number num="21" link="#21st" />
  </span>
  <div class="frame cq-interactive"></div>
</div>