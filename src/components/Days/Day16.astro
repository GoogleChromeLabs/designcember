---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day16;
---

<style>
  .sixteen {
    --bg-color: #f8eceb;
    margin: var(--size-4);
    align-self: center;

    @media (--lg) {
      aspect-ratio: 1;
      background-color: var(--_day-bg);
      border: var(--size-2) solid #d9773e;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-start: -5px;
  }

  .frame {
    place-items: center;
  }

  .bg_texture {
    background-color: var(--bg-color);
    align-self: start;
  }

  .combo {
    min-inline-size: 110%;
  }
</style>

<style global>
  [data-theme="dark"] {
    & .sixteen {
      --bg-color: hsl(44deg 70% 32%);
    }
  }
</style>

<div 
  id="16th" 
  class="day sixteen stacked" 
  title="A breakfast spread of toast, jam, peaches, and strawberry. Shall we have a picnic?"
  data-day-state={day_state} 
  data-detail-position="bottom" 
  data-detail-title="GUI Challenges: Thinking on ways to solve toasts" 
  data-detail-description="Cookie gummies chupa chups lemon drops shortbread jelly sweet roll candy canes." 
  data-detail-url="https://web.dev/shows/gui-challenges/"
>
  <span class="plaque">
    <Number num="16" link="#16th" active={day_state} />
  </span>
  <div class="frame stacked">
    <div class="bg_texture">
      <Pic filename="day16/bg_texture" width="1246" height="387" role="presentation" />
    </div>
    <div class="combo">
      <Pic filename="day16/combo" width="1383" height="816" role="presentation" />
    </div>
  </div>
</div>