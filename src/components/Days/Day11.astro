---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day11;
---

<style>
  .eleven {
    height: 90%;
    block-size: 300px;
    inline-size: 100%;
    justify-items: center;

    @media (--md) {
      --_day-height: 2;
      height: 100%;
    }

    @media (--lg) {
      height: 80%;
      --_day-height: 2;
    }
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-start center;
    margin-block-start: -10px;
  }

  .frame {
    height: 100%;
    width: 80%;
    min-block-size: 80px;
    background-color: var(--_day-bg);
    border: var(--size-2) solid #d9773e;

    @media (--lg) {
      box-sizing: border-box;
      width: 100%;
    }
  }
</style>

<div 
  id="11th" 
  data-day-state={day_state} 
  class="day eleven stacked" 
  title=""
>
  <span class="plaque">
    <Number num="11" link="#11th" />
  </span>
  <div class="frame cq-interactive"></div>
</div>