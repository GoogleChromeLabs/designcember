---
import Pic from '../Pic/Pic.astro';
import Number from '../Calendar/Number.astro';
import Days from './day.store.js';

const day_state = Days.day9;
---

<style>
  .nine {

    /* delete me */
    z-index: 100;

  }

  .container {
    max-height: 200px;
    min-height: 150px;
    max-width: 500px;
    min-width: 276px;
    inline-size: 90%;
    border-top-left-radius: 100% 200%;
    border-top-right-radius: 100% 200%;
    background: var(--_day-bg);
    background: #f9e0ae;

    @media (--md) {
      --_day-column: 2;
    }

   /* @container (min-width: 220px) {
      min-block-size: 300px;
    }*/

   /* @container (min-width: 260px) {
      min-block-size: 310px;
    }*/

   /* @container (min-width: 270px) {
      min-block-size: 350px;
    }*/

   /* @container (min-width: 320px) {
      min-block-size: 400px;
    }*/

   /* @container (min-width: 360px) {
      min-block-size: 450px;
    }*/
  }

  .plaque {
    z-index: var(--layer-1);
    place-self: flex-end center;
    margin-block-end: -25px;
  }

  .shadow {
    align-self: end;
    width: 200%;
  }

  .book {
    margin-left: 15%;
    place-self: flex-end flex-start;
    width: 25%;
  }

  .character {
    align-self: end;
    justify-self: center;
    width: 50%;

/*    @container (min-aspect-ratio: 2/1) {
      width: 100%;
    }*/
  }


  .coffee {
    align-self: end;
    margin-right: 10%;
    place-self: flex-end flex-end;
    width: 20%;
  }

  .frame {
    align-self: end;
    justify-self: center;
    width: 100%;
  }

  .monstera_front {
    align-self: end;
    place-self: flex-end flex-start;
    width: 20%;
  }

  .monstera_pot {
    align-self: end;
    place-self: flex-end flex-start;
    width: 20%;
  }

  .pothos {
    align-self: end;
    place-self: flex-end flex-end;
    width: 20%;
  }

  .steam {
    align-self: end;
    justify-self: center;
    place-self: flex-end center;
    width: 20%;
  }
</style>

