---
import Pic from '../Pic/Pic.astro';
---

<style>

footer {
  position: relative;
  width: 100%;
  background-size: cover;
  margin-top: -30%;
  z-index: 2;

  @media print {
    display: none; 
  }
}

.bird {
  position: absolute;
  width: clamp(300px, 60%, 800px);
  top: -20%;
  z-index: 2;
}

.meta {
  display: grid;
  text-align: center;
  justify-content: center;
  background-color: white;
  padding: 0 2rem 10rem;

  @media (--md) {
    text-align: left;
    justify-content: flex-end;
  }
}

.container {
  color: #00284a;

  & h2 {
    color: inherit;
  }

  @media (--md) {
    max-width: 32ch;
    margin-top: -14rem;
    margin-right: 2vw;
  }
}

.callout {
  margin-top: 1rem;
  font-style: italic;
}

</style>

<style global>
  [data-theme="dark"] {
    & .bird {
      filter: brightness(0.9);
    }
  }
</style>

<footer>
  <div class="bird">
    <Pic filename="footer/footer_birb_green" role="presentation" />
  </div>
  <div class="content">
    <div class="snow-top">
      <Pic filename="footer/footer_bg" role="presentation" />
    </div>
    <div class="meta">
      <div class="container">
        <div class="acknowledgments">
